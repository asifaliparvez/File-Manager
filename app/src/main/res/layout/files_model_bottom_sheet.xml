<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/imgView_Bottom_Sheet_Slide_down"
        android:background="@drawable/bottom_sheet_slide_down_arrow"
        android:layout_height="5dp"/>

    <TextView
        android:id="@+id/fileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/imgView_Bottom_Sheet_Slide_down"
        android:fontFamily="@font/roboto"
        android:text="Ringtones"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/divder"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_height="1dp"
        android:layout_below="@+id/fileName"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/divder"
        android:id="@+id/llCopy"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageViewCopy"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_content_copy_24"
            android:layout_height="25dp"
            android:backgroundTint="#747474"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/textViewCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto"
            android:text="Copy"
            android:textColor="#747474"
            android:textSize="20sp" />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/llMove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCopy"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewMove"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_move_file_24"
            android:backgroundTint="@color/natural"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textViewMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="16dp"
            android:text="Move"
            android:textColor="@color/natural"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llMove"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewRename"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_rename_file_24"
            android:backgroundTint="@color/natural"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textViewRename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="16dp"
            android:text="Rename"
            android:textColor="@color/natural"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llRename"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_delete_file_24"
            android:backgroundTint="@color/natural"/>

        <TextView
            android:id="@+id/textViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="16dp"

            android:text="Delete"
            android:textColor="@color/natural"
            android:textSize="20sp" />
    </LinearLayout>

