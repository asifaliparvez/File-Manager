<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Ringtones"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/divder"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_height="1dp"
        android:layout_below="@+id/fileName"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/divder"
        android:id="@+id/llCopy"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageViewCopy"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_content_copy_24" />

        <TextView
            android:id="@+id/textViewCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto"
            android:text="Copy"
            android:textColor="#000000"
            android:textSize="20sp" />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/llMove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCopy"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewMove"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_move_file_24" />

        <TextView
            android:id="@+id/textViewMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="16dp"
            android:text="Move"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llMove"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewRename"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_rename_file_24" />

        <TextView
            android:id="@+id/textViewRename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="16dp"
            android:text="Rename"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llRename"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_delete_file_24" />

        <TextView
            android:id="@+id/textViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="16dp"
            android:text="Delete"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llDelete"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewInfo"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_info_file_24" />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="16dp"
            android:text="Information"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>